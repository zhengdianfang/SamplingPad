<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhengdianfang.samplingpad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoadingActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".task.tasklist.MyTaskListActivity" />
        <activity android:name=".task.canot_verify.CanotVerifyReasonActivity" />
        <activity android:name="com.zhengdianfang.samplingpad.task.normal_product.NormalProductSamplingTableActivity"  android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="com.zhengdianfang.samplingpad.task.network_product.NetworkProductSamplingTableActivity" android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="com.zhengdianfang.samplingpad.task.food_product.FoodProductSamplingTableActivity" android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".user.LoginActivity"></activity>
    </application>

</manifest>