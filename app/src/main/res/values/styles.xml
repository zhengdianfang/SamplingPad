<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:windowBackground">@drawable/window_background_color</item>
        <item name="android:radioButtonStyle">@style/AppTheme.RadioButton</item>
    </style>

    <style name="AppTheme.EditText" parent="@style/Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:minHeight">@dimen/edit_height</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="AppTheme.RadioButton" parent="@style/Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Login"></style>

    <style name="AppTheme.Login.Tab">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.Navigation"></style>

    <style name="AppTheme.Navigation.Button">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/navigation_item_background</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="AppTheme.Home"></style>

    <style name="AppTheme.Home.TabItem">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">4dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">64dp</item>
    </style>

    <style name="AppTheme.Verify"></style>

    <style name="AppTheme.Verify.Label">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_width">@dimen/verify_label_width</item>
    </style>
</resources>
