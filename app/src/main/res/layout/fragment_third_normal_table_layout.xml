<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/produceFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/sectionTextView1"
                style="@style/AppTheme.Table.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="标称和生产单位信息" />

            <com.zhengdianfang.samplingpad.common.components.RadioGroupComponent
                android:id="@+id/producerActiveRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:radio_buttons="@array/yes_or_no"
                app:radio_label="*是否进口："
                app:radio_label_min_width="110dp" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/produceLicenseNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入社会信用代码"
                app:edit_label="*社会信用代码：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/produceCsNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入生产许可证"
                app:edit_label="*生产许可证：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/produceNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位名称"
                app:edit_label="*单位名称：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/produceAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位地址"
                app:edit_label="*单位地址：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/produceContactsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系人"
                app:edit_label="*联系人：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/producePhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系电话"
                app:edit_label="*电话：" />

            <com.zhengdianfang.samplingpad.common.components.AddressSpinnerGroupComponent
                android:id="@+id/addressSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <com.zhengdianfang.samplingpad.common.components.RadioGroupComponent
                android:id="@+id/entrustActiveRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:radio_buttons="@array/yes_or_no"
                app:radio_label="*是否委托生产："
                app:radio_label_min_width="110dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/entrustFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/sectionTextView2"
                style="@style/AppTheme.Table.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="委托生产单位信息" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustLicenseNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入社会信用代码"
                app:edit_label="*社会信用代码：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustCsNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入生产许可证"
                app:edit_label="*生产许可证：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位名称"
                app:edit_label="*单位名称：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位地址"
                app:edit_label="*单位地址：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustContactsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系人"
                app:edit_label="*联系人：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/entrustPhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系电话"
                app:edit_label="*电话：" />

            <com.zhengdianfang.samplingpad.common.components.AdminRegionSpinnerGroupComponent
                android:id="@+id/areaSpinnerGroupView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <com.zhengdianfang.samplingpad.common.components.RadioGroupComponent
                android:id="@+id/entrustTActiveRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:radio_buttons="@array/yes_or_no"
                app:radio_label="*是否进口："
                app:radio_label_min_width="110dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/agencyFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/sectionTextView3"
                style="@style/AppTheme.Table.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="进口代理商信息" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/agencyNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位名称"
                app:edit_label="*单位名称：" />


            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/agencyAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入单位地址"
                app:edit_label="*单位地址：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/agencyContactsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系人"
                app:edit_label="*联系人：" />

            <com.zhengdianfang.samplingpad.common.components.EditComponent
                android:id="@+id/agencyPhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:edit_hint="请输入联系电话"
                app:edit_label="*电话：" />

            <com.zhengdianfang.samplingpad.common.components.SpinnerComponent
                android:id="@+id/resourceSpinnerGroupView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:spinner_hint="@string/agency_origin_area_name_hint"
                app:spinner_label="@string/agency_origin_area_name_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/stoke_button_background"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:text="@string/reset_text"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/nextButtonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:text="@string/next_step_text"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>