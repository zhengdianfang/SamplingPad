<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:edit_hint="请输入计划名称"
            app:edit_label="计划名称："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入方案名称"
            app:edit_label="方案名称："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入任务号名称"
            app:edit_label="任务号："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入计划名称"
            app:edit_label="食品大类："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入受检单位名称"
            app:edit_label="受检单位名称："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入计划名称"
            app:edit_label="受检单位统\n社会信用代码："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入生产企业名称"
            app:edit_label="生产企业名称："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入生产许可证编号"
            app:edit_label="生产许可证编\n(SC/QS)："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入样品名称"
            app:edit_label="样品名称："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.DateComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:date_hint="请选择生产日期"
            app:date_label="生产日期："
            app:date_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.EditComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:edit_hint="请输入连锁品牌"
            app:edit_label="连锁品牌："
            app:edit_label_min_width="162dp" />

        <com.zhengdianfang.samplingpad.common.components.DateComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:date_hint="请选择抽样日期"
            app:date_label="抽样日期："
            app:date_label_min_width="162dp" />

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/verify_begin_text" />
    </LinearLayout>
</ScrollView>
