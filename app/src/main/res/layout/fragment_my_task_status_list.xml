<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        tools:context=".task.tasklist.fragments.MyTaskStatusListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:orientation="vertical">


            <include
                android:id="@+id/waitVerifyItem"
                layout="@layout/my_task_status_item_layout" />

            <include
                android:id="@+id/cancelItem"
                layout="@layout/my_task_status_item_layout" />
            <include
                android:id="@+id/completeItem"
                layout="@layout/my_task_status_item_layout" />
            <include
                android:id="@+id/refusesItem"
                layout="@layout/my_task_status_item_layout" />

            <include
                android:id="@+id/cannotVerifyItem"
                layout="@layout/my_task_status_item_layout" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
