<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskCodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_22"
            android:padding="16dp"
            android:background="@android:color/white"
            tools:text="单号：23123121231231231"/>

        <fragment
            android:id="@+id/reasonFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.zhengdianfang.samplingpad.task.canotverify.fragments.ReasonFragment"
            android:layout_margin="16dp"
            tools:layout="@layout/fragment_reason"/>

        <fragment
            android:id="@+id/regionFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.zhengdianfang.samplingpad.task.canotverify.fragments.RegionFragment"
            android:layout_margin="16dp"
            tools:layout="@layout/fragment_region"/>

        <fragment
            android:id="@+id/taskInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.zhengdianfang.samplingpad.task.canotverify.fragments.TaskInfoFragment"
            android:layout_margin="16dp"
            tools:layout="@layout/fragment_task_info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:background="@android:color/white">

            <Button
                android:id="@+id/saveAndSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:layout_marginRight="16dp"
                android:text="@string/save_and_submit_text"/>

            <Button
                android:id="@+id/saveOnlyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingHorizontal="32dp"
                android:background="@drawable/stoke_button_background"
                android:textColor="@color/colorPrimary"
                android:text="@string/save_and_submit_text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
