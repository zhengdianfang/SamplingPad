<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        tools:context=".main.fragments.NavigationFragment">

        <TextView
            android:id="@+id/firstUserNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/super_large"
            android:paddingLeft="16dp"
            tools:text="郑殿芳" />

        <TextView
            android:id="@+id/secondUserNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/super_large"
            android:paddingLeft="16dp" />

        <Button
            android:id="@+id/exceptionTaskListButton"
            style="@style/AppTheme.Navigation.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:drawableLeft="@drawable/ic_meter"
            android:text="无法抽样" />

        <Button
            android:id="@+id/myTaskListButton"
            style="@style/AppTheme.Navigation.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_meter"
            android:text="@string/my_task_text" />

        <Button
            android:id="@+id/upgradeAppButton"
            style="@style/AppTheme.Navigation.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_warn"
            android:text="@string/upgrade_app_text" />

        <Button
            android:id="@+id/logoutAppButton"
            style="@style/AppTheme.Navigation.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_warn"
            android:text="@string/logout_text" />

        <TextView
            android:id="@+id/appVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            tools:text="v1.0.0"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
